<UserControl x:Class="WPFLoggerDemo.Views.RawPortData"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFLoggerDemo.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition />
            <RowDefinition Height="35"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center" Content="Port Activity" />

        <ScrollViewer Grid.Row="1" Grid.Column="0" Margin="10,0,0,0" Cursor="">
            <TextBox Text="{Binding Path=PortHistoryASCII, Mode=OneWay}"/>
        </ScrollViewer>
        
        <Button  Content="Clear" Width="50" Height="25" Grid.Row="2"/>
        
    </Grid>
</UserControl>
